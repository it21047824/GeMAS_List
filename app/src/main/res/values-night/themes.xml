<resources>
    <declare-styleable name="passwordGrid">
        <attr name="animeWatching" format="color|reference" />
        <attr name="animePlanning" format="color|reference" />
        <attr name="animeCompleted" format="color|reference" />
        <attr name="customColor1" format="color|reference" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="Theme.GeMASList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!--Custom dark theme colors in main theme-->
        <item name="animeWatching">@color/watching_dark</item>
        <item name="animePlanning">@color/planning_dark</item>
        <item name="animeCompleted">@color/completed_dark</item>
        <item name="customColor1">@color/grey_light</item>
    </style>

    <!--Custom dark themes-->
    <style name="custom_checkbox">
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="custom_button">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/white</item>
    </style>



</resources>