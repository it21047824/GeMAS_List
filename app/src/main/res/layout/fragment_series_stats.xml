<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    tools:context=".SeriesStats">

    <TextView
        android:id="@+id/seriesStatistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Series Statistics"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="22sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <TextView
            android:id="@+id/SavgRating"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Total Series"
            android:textAlignment="center"
            android:textColor="#131212"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SeriesTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="SeARatingvalue"
                android:textAlignment="center"
                android:textColor="@color/grey_dark"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/StotalRating"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Average Rating"
            android:textAlignment="center"
            android:textColor="#0C0C0C"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SeriesAVG"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="SerAVGvalue"
                android:textAlignment="center"
                android:textColor="@color/grey_dark"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/series_StatbargraphContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="410dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/SeriesStatBarGraph"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="@string/rating_distribution" />




    </LinearLayout>
</FrameLayout>