<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    tools:context=".SeriesStats">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@color/background"
        android:text="@string/series_statistics"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:text="@string/stat_value"
                android:textColor="@color/grey_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="70dp"
                android:layout_weight="1"
                android:text="@string/stat_value"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:text="@string/stat_value"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:text="@string/watching"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:layout_weight="1"
            android:text="@string/planning"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="130dp"
            android:layout_weight="1"
            android:text="@string/completed"
            android:textAlignment="center"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="170dp"
            android:layout_height="147dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:background="@color/grey_dark"
            android:textColor="#A34A4949"
            android:textColorHighlight="@color/grey_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="701dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="175dp"
            android:layout_weight="0"
            android:background="@color/watching_light" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="175dp"
            android:layout_weight="0"
            android:background="@color/planning_light" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="175dp"
            android:layout_weight="0"
            android:background="@color/completed_light" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:layout_weight="1"
        android:text="@string/rating"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="208dp"
        android:layout_height="148dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:background="@color/grey_dark" />

</FrameLayout>