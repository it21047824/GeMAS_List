<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".SeriesList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:src="@drawable/my_name" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="@string/series_name01"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="59dp"
            android:layout_height="48dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="100dp"
            app:icon="@drawable/ic_baseline_edit_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:src="@drawable/series_02" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:text="@string/series_name02"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="59dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="100dp"
            app:icon="@drawable/ic_baseline_edit_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="203dp"
            android:layout_height="147dp"
            android:src="@drawable/tv_series01" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:text="@string/series_name03"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="100dp"
            app:icon="@drawable/ic_baseline_edit_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="203dp"
            android:layout_height="147dp"
            android:src="@drawable/businessprop" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="99dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="@string/series_name04"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="100dp"
            app:icon="@drawable/ic_baseline_edit_24"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>


</LinearLayout>